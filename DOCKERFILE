# ---- Builder Stage ----
# Use the official Rust image as a build environment
FROM rust:1.76 as builder

WORKDIR /usr/src/app

# Copy source code
COPY . .

# Build the release binary
RUN cargo build --release

# ---- Final Stage ----
# Use Ubuntu minimal as the final base image
FROM ubuntu:24.04-minimal

RUN apt-get update && apt-get upgrade -y && apt-get clean && rm -rf /var/lib/apt/lists/*

# Copy the compiled binary from the builder stage
COPY --from=builder /usr/src/app/target/release/orc-rust-ator /usr/local/binorc-rust-ator

# Copy the configuration file
COPY config.yaml /app/config.yaml

WORKDIR /app

# Set the command to run when the container starts
CMD ["orc-rust-ator"]